{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "excalidraw",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../excalidraw-app/build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "VITE_APP_PORT=3000 yarn --cwd ../excalidraw-app start",
    "beforeBuildCommand": "yarn --cwd ../excalidraw-app build"
  },
  "app": {
    "windows": [
      {
        "title": "Excalidraw",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
